<h1>My Groups</h1>

<p><%= link_to "Create a new group", new_my_group_path, class: "btn" %></p>

<% if @groups.any? %>
  <div class="card-list">
    <% @groups.each do |group| %>
      <div class="card">
        <h2><%= link_to group.name, my_group_path(group) %></h2>
        <p class="text-muted"><%= pluralize(group.profiles.count, "profile") %></p>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="card">
    <p>You haven't created any groups yet.</p>
  </div>
<% end %>
